{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": false,
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2018",
      "esModuleInterop": true
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"],
  "extends": "@grafana/tsconfig"
}
